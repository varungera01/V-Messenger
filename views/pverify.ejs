<style>
  *{
    margin: 0;
    padding: 0;
  }

  #door{
    background-image: url('/images/join.svg');
    background-size: cover;
    background-repeat: no-repeat;
    height : 80vh;
    }

    @media only screen and (max-width: 600px) {

      #door{
        background-image: url('/images/join.svg');
        background-size: cover;
        width : 100%;
        height : 50vh;
        margin-right : 5% !important;
      }
    }

 

</style>
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <title>Verification Page</title>
  </head>
  <body>
    

    
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    
    <h3 style = "border : 1px solid black; max-width : 200px; "class = "ml-3 mt-2 pr-2 pl-2 pt-1 pb-1">V'Messenger</h3>
    <div class = "row mr-2">
        <div class = "col-lg-3 ml-5 mt-5 mr-3">
        <h3 class = "mb-5">Phone Verification</h3>
        <form action = "/verify" method = "POST">
          
               <div class="form-group">
                <label for="exampleFormControlInput1">Mobile No</label>
                <input style = "max-width: 300px; height : 30px;" type="text" class="form-control mb-2 number" id="exampleFormControlInput1" name = "phoneNo"><br>
                <input type = "hidden" name = "_csrf" value = "<%= csrfToken %>">
                <p style = "color : red;" class = "length m"></p>
                <button  style = "background-color: #ADD8E6; color : black" type="submit" class="btn-sm btn-primary pr-2 pl-2 mb-3 verify">Verify Mobile No</button>
                <% if(errorMessage) { %>
                  <div><p style = "color : red; font-weight : 600;"><%= errorMessage %></p></div>
                <% } %>
     
              </div>
        </form>
            </div>
            <div id = "door" class = "col-lg-7 mt-3 ml-2">
              <p class = "ml-5"style = "font-size: 27px; font-family : Microsoft JhengHei; line-height: 40px;">
                Get verify your number<br>
                and 
                <br>open the door towards <span style = "font-weight: 600;"> V'Messenger</span>
              </p>
              
            </div>
                </div>
                <script>
               let input =   document.querySelector(".number"); 
              let text = document.querySelector(".length");
              let btn = document.querySelector(".verify");
              btn.addEventListener('click' , ()=>{
                if(input.value.length < 10)
                     {
                      text.innerHTML = 'Incorrect number';
                      
                     }
              });

                </script>

            </body>
            </html>

    
        
         
            
          
     
       
           
  
  